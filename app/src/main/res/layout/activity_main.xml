    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myAppTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="My Nanodegree App!"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/spotifyStreamerButton"
            style="@style/MainButton"
            android:layout_below="@+id/myAppTitle"
            android:text="Spotify Streamer" />

        <Button
            android:id="@+id/scoresAppButton"
            style="@style/MainButton"
            android:layout_below="@+id/myAppTitle"
            android:text="Scores App" />

        <Button
            android:id="@+id/libraryAppButton"
            style="@style/MainButton"
            android:layout_below="@+id/myAppTitle"
            android:text="Library App" />

        <Button
            android:id="@+id/buildItBiggerButton"
            style="@style/MainButton"
            android:layout_below="@+id/myAppTitle"
            android:text="Built it Bigger" />

        <Button
            android:id="@+id/xyzReaderButton"
            style="@style/MainButton"
            android:layout_below="@+id/myAppTitle"
            android:text="XYZ Reader" />

        <Button
            android:id="@+id/capstonButton"
            style="@style/MainButton"
            android:layout_below="@+id/myAppTitle"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:backgroundTint="@color/udacity_red"
            android:text="Capston: My Own App"
            android:textColor="#ffffff" />
    </LinearLayout>